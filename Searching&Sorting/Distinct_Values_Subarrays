void solve() {
    int n;
    cin >> n;

    vector<int> a(n);
    vin(a);

    unordered_map<int, int> last;
    last.reserve(n * 2);        // VERY IMPORTANT
    last.max_load_factor(0.7);
    long long ans = 0;
    int l = 0;

    for (int r = 0; r < n; r++) {
        if (last.count(a[r])) {
            l = max(l, last[a[r]] + 1);
        }
        last[a[r]] = r;
        ans += (r - l + 1);
    }

    cout << ans << "\n";
    
}
int32_t main() {
    Ashika
    ll t = 1;
    // cin >> t; // comment if only one test case
    for(int it = 1; it <= t; it++) {
        solve();
    }
    return 0;
}
