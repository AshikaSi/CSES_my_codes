void solve() {
     int n;
    cin >> n;

    vector<int> pos(n + 1);
    for (int i = 1; i <= n; i++) {
        int x;
        cin >> x;
        pos[x] = i;
    }

    int rounds = 1;
    for (int i = 1; i < n; i++) {
        if (pos[i + 1] < pos[i]) {
            rounds++;
        }
    }

    cout << rounds << "\n";
}
int32_t main() {
    Ashika
    ll t = 1;
    // cin >> t; // comment if only one test case
    for(int it = 1; it <= t; it++) {
        solve();
    }
    return 0;
}
